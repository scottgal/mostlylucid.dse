# Code Evolver Observability Stack Configuration
# Copy this file to .env.observability and customize as needed

# PostgreSQL Configuration
POSTGRES_DB=code_evolver
POSTGRES_USER=codeevolver
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

# Qdrant Configuration
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Loki Configuration
LOKI_PORT=3100

# Prometheus Configuration
PROMETHEUS_PORT=9090

# OpenTelemetry Collector Configuration
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_METRICS_PORT=8889
OTEL_HEALTH_PORT=13133

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_in_production
GRAFANA_ROOT_URL=http://localhost:3000

# Jaeger Configuration (if using jaeger profile)
JAEGER_UI_PORT=16686
JAEGER_OLTP_GRPC=4317
JAEGER_OLTP_HTTP=4318

# Application Configuration
CODE_EVOLVER_ENV=development  # development, staging, production
CODE_EVOLVER_SERVICE_NAME=code-evolver
CODE_EVOLVER_LOG_LEVEL=INFO

# Telemetry Configuration
TELEMETRY_ENABLED=true
TRACES_ENABLED=true
METRICS_ENABLED=true
LOKI_ENABLED=true
DRIFT_DETECTION_ENABLED=true

# External Observability Services (optional)
# Uncomment and configure if using cloud services

# Grafana Cloud
# GRAFANA_CLOUD_INSTANCE_ID=your-instance-id
# GRAFANA_CLOUD_API_KEY=your-api-key
# GRAFANA_CLOUD_LOKI_URL=https://logs-prod-us-central1.grafana.net
# GRAFANA_CLOUD_PROMETHEUS_URL=https://prometheus-prod-us-central1.grafana.net
# GRAFANA_CLOUD_TEMPO_URL=https://tempo-prod-us-central1.grafana.net

# Honeycomb
# HONEYCOMB_API_KEY=your-api-key
# HONEYCOMB_DATASET=code-evolver

# New Relic
# NEW_RELIC_LICENSE_KEY=your-license-key
# NEW_RELIC_APP_NAME=code-evolver

# Datadog
# DATADOG_API_KEY=your-api-key
# DATADOG_SITE=datadoghq.com

# AWS X-Ray
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
